<table>
  <% 5.downto(0) do |rows| %>
    <tr>
      <% 0.upto(6) do |cols|  %>
        <td>
          <% if @board[rows][cols].nil? %>
              <%= " "*5 %>
          <% else %>
            <%= @board[rows][cols] %>
          <% end %>

        </td>
      <% end %>
    </tr>
  <% end %>
  <tr>
    <%= form_tag(connect_fours_path, :method => "post") do%>
      <% 7.times do |cols| %>
      <td><%= radio_button_tag(:column, cols)%></td>
    <% end%>
  </tr>
</table>
    <%= submit_tag("Enter move")%>
<%end%>
